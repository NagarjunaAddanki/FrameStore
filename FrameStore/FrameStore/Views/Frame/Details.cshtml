@model FrameViewModel
<div>
    <h4>Frame Details</h4>
    <hr />
    <form>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Brand</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" value="@Html.DisplayFor(model => model.Brand)">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Collection</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" value="@Html.DisplayFor(model => model.Collection)">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Style</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" value="@Html.DisplayFor(model => model.Style)">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Frame Color</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" value="@Html.DisplayFor(model => model.FrameColor)">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Bridge</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" value="@Html.DisplayFor(model => model.Bridge)">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Horizontal</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" value="@Html.DisplayFor(model => model.Horizontal)">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Vertical</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" value="@Html.DisplayFor(model => model.Vertical)">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Materials</label>
            <div class="col-sm-10">
                <a class="btn btn-primary" data-toggle="collapse" href="#collapseMaterials" role="button" aria-expanded="false" aria-controls="collapseMaterials">
                    Click To Expand\Collapse
                </a>
                <div class="collapse" id="collapseMaterials">
                    <div class="card card-body">
                        <ul class="list-group list-group-horizontal-md">
                            @foreach (var item in @Model.Materials)
                            {
                                <li class="list-group-item">@Html.DisplayFor(modelItem => item.Name)</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Tracing Radii</label>
            <div class="col-sm-10">
                <a class="btn btn-primary" data-toggle="collapse" href="#collapseTracingRadii" role="button" aria-expanded="false" aria-controls="collapseTracingRadii">
                    Click To Expand\Collapse
                </a>
                <div class="collapse" id="collapseTracingRadii">
                    <div class="card card-body">
                        <ul class="list-group">
                            @foreach (var item in @Model.TracingRadii)
                            {
                                <li class="list-group-item">@Html.DisplayFor(modelItem => item)</li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>